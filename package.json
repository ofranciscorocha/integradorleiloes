{
  "name": "integradorleiloes",
  "version": "1.0.0",
  "description": "Agregador de veículos de múltiplos sites de leilão brasileiro",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/api/index.js",
    "start": "node src/api/index.js",
    "crawler:palacio": "node src/crawlers/palaciodosleiloes/run.js",
    "crawler:vip": "node src/crawlers/vipleiloes/run.js",
    "crawler:guariglia": "node src/crawlers/guariglialeiloes/run.js",
    "crawler:all": "node src/schedulers/index.js",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "test": "node src/test-crawlers.js"
  },
  "keywords": [
    "leilao",
    "veiculos",
    "crawler",
    "agregador",
    "brasil"
  ],
  "author": "Francisco Rocha",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.3.0",
    "node-cron": "^3.0.2",
    "puppeteer": "^24.37.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
